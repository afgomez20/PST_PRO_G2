<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgPlanta"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mylogo" />
        <TextView
            android:id="@+id/nombrePlanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planta: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf ="@+id/imgPlanta"
            android:layout_toEndOf="@id/imgPlanta"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tempMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombrePlanta"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imgPlanta"
            android:text="Temperatura min: "
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/humMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humedad min: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below ="@+id/tempMin"
            android:layout_toEndOf="@id/imgPlanta"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>